{
  "manifest_version": 3,
  "name": "ChatGPT Sidebar",
  "version": "1.0",
  "description": "Open ChatGPT in a Chrome sidebar panel",
  "permissions": ["sidePanel"],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
